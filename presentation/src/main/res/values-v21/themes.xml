<resources>

    <style name="AppTheme.NoActionBar.TranslucentStatusBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Event" parent="AppTheme.NoActionBar.TranslucentStatusBar">
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowEnterTransition">@transition/weather_detail_enter</item>
        <item name="android:windowReturnTransition">@transition/weather_detail_return</item>
        <item name="android:windowSharedElementReturnTransition">@transition/weather_shared_element_return</item>
    </style>

</resources>
